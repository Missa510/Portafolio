---
import { Certificaciones } from "$_libs/constantes";
import { Card } from "$_compon/ui/card";
import Certificacion from "$_compon/en/Certificacion.astro";
---

<Card props={{ id: "certificates", className: "w-full px-4 py-3 grid gap-5 item-center bg-slate-700 p-4 rounded-md shadow-lg" }} class:list="w-full">
    <section class="my-1">
        <h1
            class="text-2xl xs:text-4xl md:text-7xl text-center uppercase text-white"
        >
            Certificates
        </h1>
    </section>
    <section class="grid gap-4">
        {
            Certificaciones.map((crtf) => {
                return <Certificacion key={crtf.id} {...crtf} />;
            })
        }
    </section>
</Card>
